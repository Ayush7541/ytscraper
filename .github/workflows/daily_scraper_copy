name: Daily YouTube Scraper Copy

on:
  schedule:
    - cron: '30 23 * * *'   # Runs every day at 5:00 AM IST (23:30 UTC)
  workflow_dispatch:          # Allows manual trigger

jobs:
  run-scraper-copy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Run scraper_copy
        run: python scraper_copy.py
